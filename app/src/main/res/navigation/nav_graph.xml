            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_newNoteFragment_to_addIdeaNoteFragment"
            app:destination="@id/addIdeaNoteFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim">
            <argument
                android:name="category"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_newNoteFragment_to_addBuyingNoteFragment"
            app:destination="@id/addBuyingNoteFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
